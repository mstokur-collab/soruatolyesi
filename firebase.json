{
  "functions": {
    "source": "functions"
  },
  "firestore": {
    "rules": "firestore.rules"
  },
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/api/pay/link/create",
        "function": "createPaymentLink"
      },
      {
        "source": "/api/pay/orders/**",
        "function": "getOrderStatus"
      },
      {
        "source": "/api/webhooks/iyzico-link",
        "function": "iyzicoWebhook"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
